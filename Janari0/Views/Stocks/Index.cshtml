@model IEnumerable<Janari0.Models.Stock>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserApp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.expirationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserApp.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.IDProduct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.expirationDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id, idProd = item.IDProduct  }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, idProd = item.IDProduct }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, idProd = item.IDProduct })
            </td>
        </tr>
}
    </tbody>
</table>
